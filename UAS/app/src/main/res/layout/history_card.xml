<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_pembayaran_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{id_pembayaran}"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jumlah_paket_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{1}"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/status_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="{Status}"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/total_pembayaran_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{Rp.99999}"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/waktu_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{waktu}"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>